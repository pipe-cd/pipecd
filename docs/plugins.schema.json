{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PipeCD Plugins Registry",
  "description": "JSON Schema for the PipeCD plugins registry",
  "type": "object",
  "required": ["version", "lastUpdated", "description", "plugins", "metadata"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (semver format)",
      "pattern": "^\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time"
    },
    "description": {
      "type": "string",
      "description": "Description of the registry"
    },
    "plugins": {
      "type": "array",
      "description": "List of plugins",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "description",
          "sourcePath",
          "repository",
          "repositoryType",
          "latestVersion",
          "releaseUrl",
          "tagPattern",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique plugin identifier",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "description": "Human-readable plugin name"
          },
          "description": {
            "type": "string",
            "description": "Plugin description"
          },
          "sourcePath": {
            "type": "string",
            "description": "Path to plugin source in repository"
          },
          "repository": {
            "type": "string",
            "description": "Repository URL",
            "format": "uri"
          },
          "repositoryType": {
            "type": "string",
            "description": "Type of repository",
            "enum": ["inline", "external"]
          },
          "latestVersion": {
            "type": "string",
            "description": "Latest released version (git tag)",
            "pattern": "^[a-z0-9/.v-]+$"
          },
          "releaseUrl": {
            "type": "string",
            "description": "URL to the release page",
            "format": "uri"
          },
          "tagPattern": {
            "type": "string",
            "description": "Git tag pattern used to match releases"
          },
          "status": {
            "type": "string",
            "description": "Plugin status",
            "enum": ["stable", "beta", "alpha", "deprecated"]
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the registry",
      "properties": {
        "updateFrequency": {
          "type": "string",
          "description": "How often the registry is updated"
        },
        "dataFormat": {
          "type": "string",
          "description": "Format specification version"
        },
        "apiVersion": {
          "type": "string",
          "description": "API version for programmatic access"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about the registry"
        }
      }
    }
  }
}
